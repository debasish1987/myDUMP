<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@id/drag_handle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/list_drag" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="0.31"
            android:orientation="vertical" >

            <TextView
                style="@style/textviewApprovalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name" />

            <TextView
                style="@style/textviewApproval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Details" />

            <TextView
                style="@style/textviewApproval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department" />

            <TextView
                style="@style/textviewApproval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email" />

            <TextView
                style="@style/textviewApproval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approval Type" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.64"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/approval_name"
                style="@style/textviewApprovalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debasish Pradhan"
                 />

            <TextView
                android:id="@+id/approval_job"
                style="@style/textviewApproval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Developer"
                 />

            <TextView
                android:id="@+id/approval_dept"
                style="@style/textviewApproval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="India S/W Center" />

            <TextView
                android:id="@+id/approval_emailID"
                style="@style/textviewApproval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="debasish.pradhan@samsung.com" 
                />

            <TextView
                android:id="@+id/approval_type"
                style="@style/textviewApproval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approver"
                 />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

</LinearLayout>