<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/camera_divider"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="@dimen/vertical_tv_width"
        android:layout_height="match_parent"
        android:background="@color/corporation_slide"
        android:gravity="center"
        android:orientation="vertical" >

        <com.semco.cctv.VerticalTextView
            android:id="@+id/corpNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:padding="4dip"
            android:text="My Video Report"
            android:textColor="@color/layer_item_3"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/vertical_tv_width"
        android:layout_height="match_parent"
        android:background="@color/building_slide"
        android:gravity="center"
        android:orientation="vertical" >

        <com.semco.cctv.VerticalTextView
            android:id="@+id/buildNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:padding="4dip"
            android:text="My Building Report"
            android:textColor="@color/layer_item_3"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/vertical_tv_width"
        android:layout_height="match_parent"
        android:background="@color/floor_slide"
        android:gravity="center"
        android:orientation="vertical" >

        <com.semco.cctv.VerticalTextView
            android:id="@+id/floorNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:padding="4dip"
            android:text="My Floor Report"
            android:textColor="@color/layer_item_3"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
            android:id="@+id/no_data_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/No_data_available"
            android:visibility="gone" />
    <ListView
        android:id="@+id/cameraListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="@dimen/list_divider_height"
        android:listSelector="@android:color/transparent" />

</LinearLayout>